<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.tobiasbrentrop.intervalltimer"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="8" />

    <application  android:name="IntervallTimerApp" android:icon="@drawable/icon" android:label="@string/app_name">
       <activity 	android:name=".MainActivity"
           			android:screenOrientation="portrait"
                  	android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
 		<activity 	android:name=".NewTimer"
 		    		android:screenOrientation="portrait"
        			android:label="@string/mainAddTimer">
	    </activity>
      	<activity 	android:name=".RunTimer"
      	    		android:screenOrientation="portrait"
        			android:label="@string/mainAddTimer">
        </activity>
        <activity 	android:name=".ExerciseDetailActivity"
            		android:screenOrientation="portrait"
        			android:label="@string/mainAddTimer">
        </activity>
        <activity 	android:name=".AddExerciseActivity"
            		android:screenOrientation="portrait"
            		android:theme="@android:style/Theme.Dialog"
        			android:label="@string/mainAddTimer">
        </activity>   
        <activity 	android:name=".AddUnitActivity"
            		android:screenOrientation="portrait"
            		android:theme="@android:style/Theme.Dialog"
        			android:label="@string/mainAddTimer">
        </activity>   
    </application>
</manifest>